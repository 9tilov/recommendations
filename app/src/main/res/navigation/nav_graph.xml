<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.sadi.toor.recommend.preparing.ui.MainFragment"
        android:label="MainFragment">
        <action
            android:id="@+id/action_mainFragment_to_recommendFragment"
            app:destination="@id/recommendFragment" />
    </fragment>
    <fragment
        android:id="@+id/recommendFragment"
        android:name="com.sadi.toor.recommend.recommendation.ui.RecommendFragment"
        android:label="recommend_fragment"
        tools:layout="@layout/recommend_item" >
        <action
            android:id="@+id/action_recommendFragment_to_filterFragment"
            app:destination="@id/filterFragment" />
    </fragment>
    <fragment
        android:id="@+id/genreFragment"
        android:name="com.sadi.toor.recommend.filter.genre.ui.GenreFragment"
        android:label="GenreFragment" />
    <fragment
        android:id="@+id/filterFragment"
        android:name="com.sadi.toor.recommend.filter.ui.FilterFragment"
        android:label="FilterFragment" >
        <action
            android:id="@+id/action_filterFragment_to_genreFragment"
            app:destination="@id/genreFragment" />
        <action
            android:id="@+id/action_filterFragment_to_yearFragment"
            app:destination="@id/yearFragment" />
    </fragment>
    <fragment
        android:id="@+id/yearFragment"
        android:name="com.sadi.toor.recommend.filter.year.ui.YearFragment"
        android:label="YearFragment" />
</navigation>